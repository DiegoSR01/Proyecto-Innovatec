# Archivo de configuración de ejemplo para FestiSpot API
# Copia este archivo como .env y configura las variables según tu entorno

# URL base de tu API (REQUERIDO)
API_BASE_URL=http://localhost:3000/api

# Configuración de debug
DEBUG_MODE=true

# Timeouts (en segundos)
REQUEST_TIMEOUT=30

# Configuración de tokens
TOKEN_EXPIRY_TIME=3600
REFRESH_TOKEN_EXPIRY_TIME=86400

# Configuración de la base de datos (para referencia del backend)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=festispot
DB_USER=admin
DB_PASSWORD=password

# Configuración de email (para verificación y recuperación)
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@festispot.com
EMAIL_PASSWORD=app_password

# JWT Secret (para el backend)
JWT_SECRET=tu_jwt_secret_super_secreto_aqui

# Configuración de archivos/imágenes
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# URLs externas (opcional)
STORAGE_URL=https://tu-storage.com
CDN_URL=https://tu-cdn.com

# Configuración de redes sociales (opcional)
FACEBOOK_APP_ID=
GOOGLE_CLIENT_ID=
TWITTER_API_KEY=

# Configuración de notificaciones push (opcional)
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
